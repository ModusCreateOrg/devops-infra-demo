[Unit]
Description=uWSGI Emperor
After=syslog.target

[Service]
ExecStart=/opt/emperor/venv/bin/uwsgi --ini /app/venv/etc/emperor.ini
# Requires systemd version 211 or newer
RuntimeDirectory=uwsgi
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
